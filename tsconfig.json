{
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "module": "CommonJS",
            "noImplicitAny": false
        }
    },
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "ES6",
        "target": "ES2021",
        "lib": [
            "dom",
            "dom.iterable",
            "ESNext"
        ],
        "moduleResolution": "Bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "sourceMap": true,
        "strict": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "baseUrl": "."
    },
    "include": [
        "src"
    ]
}